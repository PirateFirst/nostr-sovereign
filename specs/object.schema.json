{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sovereign Object",
  "description": "Canonical object for negotiated fetch, re-hosting, and receipt chaining.",
  "type": "object",
  "required": [
    "object_id",
    "content_hash",
    "origin",
    "retrieved_at",
    "receipts"
  ],
  "properties": {
    "object_id": {
      "type": "string"
    },
    "content_hash": {
      "type": "string"
    },
    "origin": {
      "type": "string"
    },
    "retrieved_at": {
      "type": "string",
      "format": "date-time"
    },
    "receipts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/receipt"
      }
    }
  },
  "definitions": {
    "receipt": {
      "type": "object",
      "required": ["issuer", "timestamp", "signature"],
      "properties": {
        "issuer": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "signature": { "type": "string" }
      }
    }
  }
}
